[MAIN]
fail-under=9
max-line-length=160
extension-pkg-allow-list=pydantic
load-plugins=pylint_pydantic

[MESSAGES CONTROL]
# C0116[missing-function-docstring]: allow functions/class methods without a docstring
# C0301[line-too-long]: black takes care of the formatting
# R0903[too-few-public-methods]: generates too much noise for model classes
disable=C0116, C0301, R0903
